&JULES_INPUT_GRID
  x_dim_name = "x",
  y_dim_name = "y",
  nx = 1,
  ny = 1,
  tile_dim_name = "tile",
  soil_dim_name = "soil",
  snow_dim_name = "snow"
/

&JULES_LATLON
  latitude  = 52.168,
  longitude = 5.744
/

# Land fraction is assumed to be 1.0 for single point runs
&JULES_LAND_FRAC /

# We do not want to run on a subgrid of the input, so nothing to do here
&JULES_MODEL_GRID /

&JULES_SURF_HGT
  zero_height = T
/
